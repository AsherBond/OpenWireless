#!/usr/bin/python
import json, sys, common, os, auth

def jsonrpc_login():
  """Accept a JSONRPC-style login, with parameters like so:

  {"jsonrpc":"2.0","method":"login","params":["username","password"],"id":1}
  """
  data = json.loads(sys.stdin.read())
  try:
    params = data["params"]
    username = params[0]
    password = params[1]
  except KeyError, e:
    render_error(e.__str__())

  a = auth.Auth("/etc/auth")
  if a.is_password(password):
    print "Content-Type: application/json"
    print "Set-Cookie: %s=%s; path=/; HttpOnly;" % (
      auth.Auth.AUTH_COOKIE_NAME, a.regenerate_authentication_token())
    print
    print "{}"
  else:
   common.render_error("Bad password.")

jsonrpc_login()
