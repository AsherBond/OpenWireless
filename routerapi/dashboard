			"pingSpeedMetric": "ms",
			"connected": connected
		},
		"lanNetwork": {
			"name": "LAN Network",
			"uploadSpeed": "Loading",
			"uploadSpeedMetric": "mb/s",
			"downloadSpeed": "Loading",
			"downloadSpeedMetric": "mb/s",
			"devices": "0"
		},
		"privateWifi": {
			"name": "Private Wifi",
			"uploadSpeed": "Loading",
			"uploadSpeedMetric": "mb/s",
			"downloadSpeed": "Loading",
			"downloadSpeedMetric": "mb/s",
			"devices": "0",
			"on": False
		},
		"openWireless": {
			"name": "Openwireless.org",
			"uploadSpeed": "Loading",
			"uploadSpeedMetric": "mb/s",
			"downloadSpeed": "Loading",
