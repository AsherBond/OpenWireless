#!/usr/bin/python

import json, re
from random import randrange
from subprocess import check_output
from datetime import datetime

def get_byte_counts(network_name):
  parser_pattern = re.compile('SRC packets: \d+ bytes: (\d+) DST packets: \d+ bytes: (\d+)')
  network_data = parser_pattern.(check_output("iptaccount -l " + network_name))
  return {
    "uploadUsage" : network_data[3],
    "downloadUsage" : network_data[0]
  }

[internetUploadUsage, internetDownloadUsage] = get_byte_counts("internet")
[lanNetworkUploadUsage, lanNetworkDownloadUsage] = get_byte_counts("lanNetwork")
[privateWifiUploadUsage, privateWifiDownloadUsage] = get_byte_counts("privateWifi")
[openWirelessUploadUsage, openWirelessDownloadUsage] = get_byte_counts("openWireless")

result = {
  "internet": {
    "uploadUsage" : internetUploadUsage,
    "downloadUsage" : internetDownloadUsage
  },
  "lanNetwork": {
    "uploadUsage" : lanNetworkUploadUsage,
    "downloadUsage" : lanNetworkDownloadUsage
  },
  "privateWifi": {
    "uploadUsage" : privateWifiUploadUsage,
    "downloadUsage" : privateWifiDownloadUsage
  },
  "openWireless": {
    "uploadUsage" : openWirelessUploadUsage,
    "downloadUsage" : openWirelessDownloadUsage
  },
  "dateTime" : datetime.now().isoformat()
}

print "Content-Type:application/json\r\n"
print json.JSONEncoder().encode(result)
